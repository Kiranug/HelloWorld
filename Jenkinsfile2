@Library('jenkins-shared-library-framework@master') _ //master or whatever branch

pipeline {
    agent any  
    environment {
        // initialize common vars
        common_vars = my_vars.loadVars()
    } // environment

    stages {
        stage('Some Stage') {
           steps {
                echo "env.var1 = ${varMap.var1}"
            }
        }
    }

    post {
        always { 
            script {
                // Print environment variables
                sh "env"
            } // script
        } // always
    } // post

} // pipeline
